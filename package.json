{
	"name": "@mutablejs/core",
	"version": "0.1.0",
	"description": "Mutable state, with reactive functions - automatic result recalculations on state changes",
	"keywords": [
		"mutable state",
		"reactive functions",
		"variables",
		"reactivity",
		"javascript",
		"typescript",
		"mutability",
		"rerendering",
		"recalculating"
	],
	"files": [
		"dist"
	],
	"main": "./dist/index.umd.js",
	"module": "./dist/index.es.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.es.js",
			"require": "./dist/index.umd.js"
		}
	},
	"scripts": {
		"start": "npx vite",
		"build": "npx vite build && npx tsc --emitDeclarationOnly",
		"prepack": "npm run build"
	},
	"author": "Nikita 'donnikitos' Nitichevski <me@donnikitos.com> (https://donnikitos.com/)",
	"repository": {
		"type": "git",
		"url": "https://github.com/donnikitos/derivi-core"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/events": "^3.0.0",
		"@types/node": "^17.0.23",
		"typescript": "^4.5.5",
		"vite": "^2.8.4"
	},
	"dependencies": {
		"events": "^3.3.0"
	}
}
